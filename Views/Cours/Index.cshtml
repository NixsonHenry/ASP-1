@model IEnumerable<PAS.Models.Cour>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfesseurId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe.ClasseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfesseurId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
